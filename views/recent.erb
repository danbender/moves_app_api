<div data-role='page'>
  <div data-role='header'>
    <h1>Moves' API</h1>
  </div>
  <div data-role='content'>
    <div id='chart'></div>
    <ul data-role='listview'>
      <% for day in @json.reverse %>
        <li>
          <%= format_date(day['date']) %>
          <% unless day['summary'].nil? %>
            <% for activity in day['summary'].find_all? { |a| a['activity'] == 'wlk'} %>
              <p><%= activity['steps'] %> steps</p>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <script>
    visualize([<%= @steps.join(',') %>])
  </script>
</div>